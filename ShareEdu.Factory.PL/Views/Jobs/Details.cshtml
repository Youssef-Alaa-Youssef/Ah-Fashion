@model ShareEdu.Factory.PL.ViewModels.Jobs.JobViewModel // Ensure correct namespace and class name

<h1>Job Details</h1>

<div>
    <h4>Job ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Responsibilities</dt>
        <dd class="col-sm-10">@Model.Responsibilities</dd>
        <dt class="col-sm-2">Is Open ?</dt>
        <dd class="col-sm-10">@Model.IsOpen</dd>

    </dl>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
</div>
