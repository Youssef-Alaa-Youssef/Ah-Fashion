@model IEnumerable<ShareEdu.Factory.DAL.Models.Employment.JobCategory>

@{
    ViewData["Title"] = "Jobs";
}

@{
    if (TempData["Success"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                showSuccess('@TempData["Success"]');
            });
        </script>
    }
    else if (TempData["Error"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                showError('@TempData["Error"]');
            });
        </script>
    }
}
<style>
    body {
        font-weight: 700; /* Ensure all text inherits this */
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    .card__title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card__content {
        color: #333;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card__info {
        display: flex;
        justify-content: space-between;
        color: #888;
        font-size: 0.9rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .apply-button {
        background-color: #A71556;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none; /* Ensure links appear without underline */
        display: inline-block; /* Ensure button behaves like a block element */
        font-weight: bold;
    }

        .apply-button:hover {
            text-decoration: none; 
        }
    .category-header {
        font-size: 2rem; /* Larger font size */
        font-weight: bold;
        margin-top: 30px;
        margin-bottom: 20px;
        padding: 15px;
        border-bottom: 3px solid #A71556; /* Blue border bottom */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Enhanced shadow */
        text-transform: uppercase; /* Convert text to uppercase */
        letter-spacing: 1px; /* Increase letter spacing for emphasis */
        color: #A71556; /* Blue color for text */
        position: relative; /* Positioning context for pseudo-element */
    }

        .category-header::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 50%;
            height: 3px;
            background-color: #A71556; /* Red stripe at bottom */
        }
</style>

<section class="section dashboard container-fluid">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            @{
        if (User.IsInRole("Admin") || User.IsInRole("Recruitment Officer") || User.IsInRole("Super Admin"))
        {
            
            <span class="mr-1">
                <a asp-action="AllJobs" class="btn btn-outline-primary">All Jobs Here</a>
            </span>
            <span class="mr-1">
                <a asp-action="Index" asp-controller="DynamicInputs" class="btn btn-outline-primary">Create Inputs Form</a>
            </span>
            <span class="mr-1">
                <a asp-action="Create" class="btn btn-outline-primary">Create a Job</a>
            </span>
        }
    }

    @foreach (var category in Model)
    {
        <h2 class="category-header">@category.Name</h2>
        <div class="row">
            @foreach (var job in category.Jobs)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card">
                        <h3 class="card__title">@job.Title</h3>
                        <p class="card__content">@job.Description</p>
                        <div class="card__info">
                            <div class="font-weight-bold">@job.Location</div>
                            <div class="font-weight-bold">@job.Salary</div>
                        </div>
                        <div class="card__info">
                            <div class="font-weight-bold">Posted: @job.PostedDate.ToShortDateString()</div>
                            <div class="font-weight-bold">Apply by: @job.LastDateToApply.ToShortDateString()</div>
                        </div>
                        @{
                            if (job.IsOpen)
                            {
                                <a href="@Url.Action("Employment", "DynamicInputs", new { jobId = job.Id })" class="apply-button mt-3">Apply</a>
                            }
                            else
                            {
                                <span class="apply-button mt-3" disabled>Closed</span>
                            }
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
</div>
</section>
