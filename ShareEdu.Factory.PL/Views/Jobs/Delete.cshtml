
@model ShareEdu.Factory.PL.ViewModels.Jobs.JobViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5 mb-5">
<h1>Delete Job</h1>

<div>
    <h4>Are you sure you want to delete this job?</h4>
    <dl class="row">
        <dt class="col-sm-2">Job ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@Model.Location</dd>
            <dt class="col-sm-2">Responsibilities</dt>
            <dd class="col-sm-10">@Model.Responsibilities</dd>
            <dt class="col-sm-2">Is Open ?</dt>
            <dd class="col-sm-10">@Model.IsOpen</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


</div>