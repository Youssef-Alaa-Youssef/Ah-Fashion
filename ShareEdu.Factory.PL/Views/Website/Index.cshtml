@model IEnumerable<ShareEdu.Factory.DAL.Models.Settings.Website>

@{
    ViewData["Title"] = "Website Index";
}
<style>
    #myTable {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        border: 1px solid #dddddd; /* Light border around the table */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add subtle shadow for depth */
    }

        #myTable th,
        #myTable td {
            padding: 12px; /* Padding for better spacing */
            text-align: center; /* Center-align text */
            border-bottom: 1px solid #dddddd; /* Bottom border for all cells */
        }

        #myTable th {
            background-color: #f2f2f2; /* Light gray background for header */
            color: #333333; /* Dark text color for header */
            font-weight: bold; /* Bold font for header */
        }

        #myTable tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Alternate row background color */
        }

        #myTable tbody tr:hover {
            background-color: #f2f2f2; /* Hover background color */
        }

</style>

<section class="section dashboard container-fluid">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <h1>Websites</h1>

<table id="myTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Domain</th>
            <th>Company Name</th>
            <th>Now</th>
            <th>Is Visible</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var website in Model)
        {
            <tr>
                <td>@website.Id</td>
                <td>@website.Name</td>
                <td>@website.Domain</td>
                <td>@website.CompanyName</td>
                <td>@website.Now</td>
                <td>@(website.IsVisible ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@website.Id">Edit</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
</section>