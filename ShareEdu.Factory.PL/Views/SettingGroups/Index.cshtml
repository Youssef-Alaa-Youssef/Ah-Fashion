@model IEnumerable<ShareEdu.Factory.DAL.Models.Settings.SettingGroup>
@{
    ViewData["Title"] = "All Setting Group";
}
<section class="section dashboard container-fluid">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
<h1>Setting Groups</h1>
<div class="mb-3">
<span class="mr-2 mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</span>
<span>
            <a asp-action="Index" asp-controller="Sections" class="btn btn-primary">All Sections</a>
</span>
    </div>
<style>
    #myTable {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        border: 1px solid #dddddd; /* Light border around the table */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add subtle shadow for depth */
    }

        #myTable th,
        #myTable td {
            padding: 12px; /* Padding for better spacing */
            text-align: center; /* Center-align text */
            border-bottom: 1px solid #dddddd; /* Bottom border for all cells */
        }

        #myTable th {
            background-color: #f2f2f2; /* Light gray background for header */
            color: #333333; /* Dark text color for header */
            font-weight: bold; /* Bold font for header */
        }

        #myTable tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Alternate row background color */
        }

        #myTable tbody tr:hover {
            background-color: #f2f2f2; /* Hover background color */
        }

</style>
<table id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Controller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ranking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.place)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkNameEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkNameAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Controller)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ranking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.place)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
</section>