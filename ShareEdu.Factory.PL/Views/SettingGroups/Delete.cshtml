@model ShareEdu.Factory.DAL.Models.Settings.SettingGroup
@{
    ViewData["Title"] = "Delete Setting Group";
}

<div class="container mt-5 mb-5">

    <h1>Setting Group Details</h1>

    <div>
        <h4>Name: @Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LinkNameEn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LinkNameEn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LinkNameAr)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LinkNameAr)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Controller)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Controller)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Action)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Action)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Visable)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Visable)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ranking)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ranking)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.place)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.place)
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <p>Are you sure you want to delete this setting group?</p>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
