@model ShareEdu.Factory.PL.ViewModels.Settings.SettingGroupViewModel
@{
    ViewData["Title"] = "Create Setting Group";
}
<section class="section dashboard container-fluid">
    <div class="row">
        <div class="col-lg-8">

<h1>Create Setting Group</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
                <div class="form-group">
                    <label asp-for="Permission" class="control-label"></label>
                    <select asp-for="Permission" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewData["Roles"])">
                        <option value="User">Select Role</option>
                    </select>
                    <span asp-validation-for="Permission" class="text-danger"></span>
                </div>

    <div class="form-group">
        <label asp-for="LinkNameEn"></label>
        <input asp-for="LinkNameEn" class="form-control" />
        <span asp-validation-for="LinkNameEn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LinkNameAr"></label>
        <input asp-for="LinkNameAr" class="form-control" />
        <span asp-validation-for="LinkNameAr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Controller"></label>
        <input asp-for="Controller" class="form-control" />
        <span asp-validation-for="Controller" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Action"></label>
        <input asp-for="Action" class="form-control" />
        <span asp-validation-for="Action" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Visable"></label>
                <input asp-for="Visable" class="form-check-input" />
                <span asp-validation-for="Visable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ranking"></label>
        <input asp-for="Ranking" class="form-control" />
        <span asp-validation-for="Ranking" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place"></label>
        <input asp-for="Place" class="form-control" />
        <span asp-validation-for="Place" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>

</form>
</div>
    </div>

</section>