@model List<UserViewModel>
<style>
    #myTable {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        border: 1px solid #dddddd; /* Light border around the table */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add subtle shadow for depth */
    }

        #myTable th,
        #myTable td {
            padding: 12px; /* Padding for better spacing */
            text-align: center; /* Center-align text */
            border-bottom: 1px solid #dddddd; /* Bottom border for all cells */
        }

        #myTable th {
            background-color: #f2f2f2; /* Light gray background for header */
            color: #333333; /* Dark text color for header */
            font-weight: bold; /* Bold font for header */
        }

        #myTable tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Alternate row background color */
        }

        #myTable tbody tr:hover {
            background-color: #f2f2f2; /* Hover background color */
        }

</style>

<section class="section dashboard container-fluid">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">

    <h1 class="font-weight-bold text-center mb-4 mt-2">User Details</h1>
                @Html.Partial("_SearchInputPartial", new Tuple<string, string, string>("Index", "Search", ViewBag.query ?? ""))
    <table id="myTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td><a class="btn btn-outline-info" asp-action="Details" asp-route-id="@user.Id">Detail</a></td>
                                <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                                <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>
                            </tr>
                        }
                        <tr>
                            <td colspan="5" class="text-center">
                                <button class="btn btn-outline-success mr-2" onclick="window.print()">Print</button>
                                <button class="btn btn-outline-secondary mr-2">Another Action</button>
                                <button class="btn btn-outline-info">PDF</button>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
</div>
</div>
</section>
