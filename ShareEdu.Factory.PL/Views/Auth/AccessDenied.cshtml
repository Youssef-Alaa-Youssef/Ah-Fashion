@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Auth"; // Assuming _Auth.cshtml is your shared layout for authenticated pages
}
<style>
    .card-body {
        padding: 40px;
        text-align: center;
    }

    .display-4 {
        font-weight: bold;
        margin-bottom: 20px;
    }

    .text-danger {
        color: #dc3545;
    }

    hr {
        border-top: 2px solid #dc3545;
        margin: 20px 0;
    }

    .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    .fa-lock, .fa-arrow-left {
        margin-right: 10px;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h1 class="display-4 text-danger"><i class="fas fa-lock"></i> Access Denied</h1>
                    <p class="lead">Sorry, you don't have permission to access this page.</p>
                    <p>Please contact your administrator for assistance.</p>
                    <hr>
                    <p><a href="@Url.Action("Index", "Home")" class="btn btn-outline-danger"><i class="fas fa-arrow-left"></i> Back to Home</a></p>
                </div>
            </div>
        </div>
    </div>
</div>



