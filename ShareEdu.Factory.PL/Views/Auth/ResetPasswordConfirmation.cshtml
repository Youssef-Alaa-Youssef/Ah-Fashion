@{
    ViewData["Title"] = "Password Reset Confirmation";
    Layout = "_Auth";
}
@{
    if (TempData["Success"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                showSuccess('@TempData["Success"]');
            });
        </script>
    }
    else if (TempData["Error"] != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                showError('@TempData["Error"]');
            });
        </script>
    }
}
<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .text-success {
        color: #28a745;
    }

    .lead {
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center">
                <h2 class="display-4 text-success">Password Reset Successful</h2>
                <p class="lead">Your password has been reset successfully.</p>
                <p>You can now <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">Log In</a> with your new password.</p>
            </div>
        </div>
    </div>
</div>


