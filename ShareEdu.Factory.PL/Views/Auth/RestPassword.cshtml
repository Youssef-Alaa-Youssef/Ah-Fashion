@model RestPasswordViewModel
@{
    ViewData["Title"] = "Rest Password";
    Layout = "_Auth";
}

@{
    if (ViewData["Error"] is not null)
    {
        <div class="alert alert-danger">@ViewData["Error"]</div>
    }

}
<div class="card-body">
    <h5 class="card-title" style="text-align: center; font-size: 24px; color: #2d79f3; margin-top: 20px; text-transform: uppercase; font-weight: bold;">Rest Password Now</h5> <!-- Inline styles for the login title -->
    <div asp-validation-summary="ModelOnly" class="text-danger validation-summary">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>    <form class="form" asp-action="RestPassword">
        <div class="flex-column">
            <label asp-for="Email"></label>
        </div>
        <div class="inputForm">
            <svg height="20" viewBox="0 0 32 32" width="20" xmlns="http://www.w3.org/2000/svg"><g id="Layer_3" data-name="Layer 3"><path d="m30.853 13.87a15 15 0 0 0 -29.729 4.082 15.1 15.1 0 0 0 12.876 12.918 15.6 15.6 0 0 0 2.016.13 14.85 14.85 0 0 0 7.715-2.145 1 1 0 1 0 -1.031-1.711 13.007 13.007 0 1 1 5.458-6.529 2.149 2.149 0 0 1 -4.158-.759v-10.856a1 1 0 0 0 -2 0v1.726a8 8 0 1 0 .2 10.325 4.135 4.135 0 0 0 7.83.274 15.2 15.2 0 0 0 .823-7.455zm-14.853 8.13a6 6 0 1 1 6-6 6.006 6.006 0 0 1 -6 6z"></path></g></svg>
            <input asp-for="Email" class="input" placeholder="Enter your Email">
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
        <p class="p">
            Do you have an account ? <span class="span"><a asp-action="LogIn">Log In</a></span>

        </p>
        <button class="button-submit">Reset Password</button>

    </form>
    </<div>
