@{
    ViewData["Title"] = "Log Out";
}

<section class="section dashboard container-fluid">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="card-title text-center">Log Out</h1>
                    <hr>

                    <div class="text-center">
                        <h3>Are you sure you want to log out?</h3>

                        <form asp-action="AcctualLogOut" class="mt-4">
                            <div class="text-center">
                                <button type="submit" class="btn btn-danger mr-2">Log Out</button>
                                <a asp-action="DashBoard" asp-controller="Home" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
