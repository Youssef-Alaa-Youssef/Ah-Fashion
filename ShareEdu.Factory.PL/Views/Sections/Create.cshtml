@model ShareEdu.Factory.DAL.Models.Settings.Section

@{
    ViewData["Title"] = "Create Section";
}

<section class="section dashboard container-fluid">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
<h1>Create Section</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Visable"></label>
                    <input asp-for="Visable" class="form-check-input" />
        <span asp-validation-for="Visable" class="text-danger"></span>
    </div>
                <div class="form-group">
                    <label asp-for="SettingGroupId" class="control-label"></label>
                    <select asp-for="SettingGroupId" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewData["SettingGroups"])">
                        <option value="">Select Group</option>
                    </select>
                    <span asp-validation-for="SettingGroupId" class="text-danger"></span>
                </div>
    <div class="form-group">
        <label asp-for="CreatedAt"></label>
        <input asp-for="CreatedAt" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>

</form>
</div>
</div>
</section>