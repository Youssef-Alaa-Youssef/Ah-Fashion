@model ShareEdu.Factory.PL.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="section dashboard container-fluid">
    <div class="row">

        <div class="col-lg-8">            <!-- Left side columns -->

    <h1>Create Product Category</h1>

            <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="NameEn" class="control-label"></label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NameAr" class="control-label"></label>
            <input asp-for="NameAr" class="form-control" />
            <span asp-validation-for="NameAr" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
                <div class="form-group">
                    <label asp-for="ImagePathFile">Choose Image</label>
                    <input asp-for="ImagePathFile" class="form-control-file" accept="image/*">
                    <span asp-validation-for="ImagePathFile" class="text-danger"></span>
                </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>

</div>
</div>
</div>
</section>

