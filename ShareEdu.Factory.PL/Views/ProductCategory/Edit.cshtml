@model CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<section class="section dashboard container-fluid">
    <div class="row">
        <div class="col-lg-8">    

    <h1>Edit Product Category</h1>


<h2>Edit Category</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="NameEn">Name (English)</label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NameAr">Name (Arabic)</label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImagePathFile">Upload Image</label>
        <input asp-for="ImagePathFile" type="file" class="form-control-file" />
        <span asp-validation-for="ImagePathFile" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>

</div>
</div>
</section>