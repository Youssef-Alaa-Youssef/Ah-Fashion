@model Tuple<string, string, string>

<div class="row justify-content-center">
    <div class="col-md-9">
        <div class="search-bar">
            <form class="search-form" method="POST" asp-action="@Model.Item1">
                <div class="input-group">
                    <input type="text" name="query" class="form-control" value="@Model.Item3" placeholder="@Model.Item2" title="Enter search keyword">
                    <button type="submit" class="btn btn-outline-warning" style="height: 39px; line-height: 24px;">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>
