@model ConfirmationModalViewModel

<div class="modal fade" id="@Model.ModalId" tabindex="-1" role="dialog" aria-labelledby="@Model.TitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@Model.TitleId">@Model.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@Model.Message</p>
            </div>
            <div class="modal-footer">
                <form asp-action="@Model.Action" asp-controller="@Model.Controller">
                    <button type="button" class="btn btn-outine-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outine-primary">@Model.ButtonText</button>
                </form>
            </div>
        </div>
    </div>
</div>
