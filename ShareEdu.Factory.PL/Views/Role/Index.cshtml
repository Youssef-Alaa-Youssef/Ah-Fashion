@model IList<ShareEdu.Factory.PL.ViewModels.Auth.ApplicationUserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<div class="container mt-5">
    <h1>All Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Current Roles</th>
                <th>Assign Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <ul>
                            @foreach (var role in user.Roles)
                            {
                                <li>@role</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Role" asp-action="AssignRoles" asp-route-userId="@user.UserId">Assign Role</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
